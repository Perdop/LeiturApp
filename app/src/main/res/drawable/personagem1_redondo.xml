<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
        <!-- Camada da borda arredondada -->
        <item>
                <shape
                    android:shape="rectangle">
                        <corners android:radius="1000dp"/> <!-- Raio dos cantos arredondados -->
                        <solid android:color="#EBC446"/> <!-- Cor do fundo da borda -->
                </shape>
        </item>
        <!-- Camada da imagem de fundo -->
        <item>
                <bitmap
                    android:src="@drawable/pedro"
                    android:gravity="fill" />
        </item>
</layer-list>
